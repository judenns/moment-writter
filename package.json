{
  "name": "moment-writter",
  "version": "1.0.0",
  "description": "AI-powered obituary and memorial website creator using theme-configurable design system with Vite, vanilla web technologies, and Figma MCP integration.",
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "dev:https": "vite --https",
    "dev:style": "vite --open /design-system.html",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "preview:https": "vite preview --https",
    "clean": "rm -rf dist node_modules/.vite",
    "theme": "node scripts/update-theme.js",
    "dev:theme": "npm run theme && vite --open /design-system.html",
    "build:theme": "npm run theme && vite build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/judenns/moment-writter.git"
  },
  "keywords": ["obituary", "memorial", "ai", "design-system", "vite", "vanilla-js"],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/judenns/moment-writter/issues"
  },
  "homepage": "https://github.com/judenns/moment-writter#readme",
  "devDependencies": {
    "terser": "^5.44.0",
    "vite": "^7.1.6"
  }
}
